{
  "system": {
    "mainApp": {
      "port": 9000
    },
    "api": {
      "port": 9010
    },
    "socket": {
      "port": 9020
    }
  },

  "security": {
    "tokenLife": 7200,
    "jwt_secret": "foo bar big secret",
    "passport" : {
      "strategies": ["jwt"],
      "options" : { "session" : false }
    }
  },

  "microservice": {
    "user": {
      "host": "localhost",
      "port": 8080,
      "apiVersion": "v1",
      "apis": {
        "validate": {
          "method": "POST",
          "baseURL": "/noetlMetadata/v1/admin/users/authenticate"
        }
      }
    },

    "metadata": {
      "host_port": "localhost:8080",
      "port": 8080,
      "apiVersion": "/noetlMetadata/v1/",
      "apis": {
        "getMetadata": {
          "method": "GET",
          "endpoint": "templates"
        }
      }
    }
  },

  "data": {
    "dbname": "noetlDB",
    "adminDB": "adminDB",
    "metadataDB": "metadataDB",
    "configDB":"configDB"
  },

  "MONGODB_PORT_27017_TCP_ADDR": "localhost",
  "MONGODB_NOETL_PORT_27017_TCP_ADDR": "101.101.101.101",
  "MONGODB_PORT_27017_TCP_PORT": 27017,
  "MYSQLDB_TCP_ADDR": "localhost",

  "METADATA_PORT_8080_TCP_ADDR": "localhost",
  "METADATA_PORT_8080_TCP_PORT": 8080
}
